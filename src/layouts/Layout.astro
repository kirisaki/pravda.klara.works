---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link
			href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400&display=swap"
			rel="stylesheet"
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=M+PLUS+1p&display=swap"
			rel="stylesheet"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{(title ? title + " - " : "") + "Pravda - Klara Works"}</title>
	</head>
	<body>
		<div class="container">
			<Header />
			<main class="main">
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>

<style>
	.container {
		width: 60vw;
		margin-right: auto;
		margin-left: auto;
		@media screen and (max-width: 600px) {
			width: 100vw;
		}
	}
	.main {
		padding: 0 1rem 2rem;
	}
	:root[data-theme="light"] .main {
		border-radius: 1px;
		background: var(--white);
		color: var(--dark);
	}
</style>
